.container
  center 960px 40px
  +mobile()
    center 960px 20px

.vertical-center
  position relative
  top 50%
  transform translateY(-50%)

.center-column
  column(2/3, offset: 1/6)
  +mobile()
    stack()

.read-more
  font-knockout-28()
  font-size 20px
  letter-spacing 1px

  position absolute
  bottom 40px
  width 100%

  +mobile()
    bottom 20px
    font-size 15px

.background-video
  margin-top -(header-height)
  position fixed !important
  min-width 100%
  min-height 100%
  background-size cover
  background-image url('../videos/noir-loop.jpg')
  z-index -1
