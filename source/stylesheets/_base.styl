*, *:before, *:after
  box-sizing border-box

html, body
  height 100%

body
  padding-top header-height
  font-sentinal()
  color gray

h1, h2, h3, h4, h5, h6
  &, & + .subtitle
    font-knockout()
    margin 0
    line-height 1

h1
  text-align center
  font-size 60px
  color orange
  margin 30px 0

  +mobile()
    font-size: 45px

  & + .subtitle
    margin-top -25px
    font-size 40px
    line-height 1.25
    +mobile()
      font-size 30px

h2
  text-align center
  margin 30px 0
  font-size 60px
  color grayLight
  +mobile()
    font-size: 45px
    margin 20px 0

h3
  margin-top 30px
  font-size 30px
  color orange
  +mobile()
    font-size 25px

  & + p
    margin-top 4px

  & + .subtitle
    font-sentinal()
    color grayLight
    font-style italic
    line-height 1.5

p
  font-size 14px
  line-height 1.5
  +mobile()
    font-size 12px

p.lead
  font-knockout()
  font-size 31px
  line-height 1.2
  margin: 20px 0
  +mobile()
    font-size 25px

  em
    font-style normal
    color orange

img
  max-width 100%
