*, *:before, *:after
  box-sizing border-box

html, body
  height 100%

body
  pattern-diagonal()
  font-sentinal()
  padding-top header-height
  color gray

h1, h2, h3, h4, h5, h6
  &, & + .subtitle
    font-knockout-28()
    margin 0
    line-height 1

h1
  font-size 60px
  color orange

  & + .subtitle
    margin-top 5px
    font-size 40px
    line-height 50px

h2
  text-align center
  margin 30px 0
  font-size 60px
  color grayLight

h3
  margin-top 20px
  font-size 30px
  color orange

  & + .subtitle
    margin-top 5px
    font-sentinal()
    color grayLight
    font-style italic

p
  font-size 14px
  line-height 1.5

p.lead
  font-knockout-28()
  font-size 31px
  line-height 35px
  margin: 20px 0

  em
    font-style normal
    color orange

img
  max-width 100%
